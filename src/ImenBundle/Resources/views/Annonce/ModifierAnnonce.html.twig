{% extends 'admin.html.twig' %}
{% block content %}

    <h1 align="center"> Update Announce </h1>
    {{ form_start(form) }}
        <br>
        <div align="center">
            Nom annonce:
                <div class="col-sm-6 mb-3 mb-sm-0">
                    {{ form_widget (form.nomAnnonce , { 'attr': {'class' : "form-control form-control-user" }}) }}
                </div>
            <br>
            Description annonce :
                <div class="col-sm-6 mb-3 mb-sm-0">
                    {{ form_widget (form.descriptionAnnonce , { 'attr': {'class' : "form-control form-control-user" }}) }}
                </div>
            <br>
        <div class="col-sm-3 mb-3 mb-sm-0" >
            <input type="submit" class="btn btn-secondary btn-user btn-block" value="Update"/>
        </div>
        </div>
    {{ form_end(form) }}

{% endblock %}