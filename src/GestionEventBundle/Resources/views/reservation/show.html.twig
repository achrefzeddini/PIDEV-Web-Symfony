{% extends 'admin.html.twig' %}
{% block content %}
<!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">{{ reservation.nomreservation }}</h1>
                <p class="mb-4"></p>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                                <tbody>
                                <tr>
                                    <th>Datereservation</th>
                                    <td>{{ reservation.datereservation|date("m/d/Y") }}</td>
                                </tr>
                                <tr>
                                    <th>Quantite</th>
                                    <td>{{ reservation.quantite }}</td>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <td>{{ reservation.total }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ reservation.type }}</td>
                                </tr>
                                <tr>
                                    <th>Seat</th>
                                    <td>{{ reservation.seat }}</td>
                                </tr>
                                <tr>
                                    <th>Payer</th>
                                    <td>{{ reservation.payer }}</td>
                                </tr>
                                <tr>
                                    <th>Nomreservation</th>
                                    <td>{{ reservation.nomreservation }}</td>
                                </tr>
                                <tr>
                                    <th>Iduser</th>
                                    <td>{{ reservation.iduser }}</td>
                                </tr>
                                <tr>
                                    <th>Idevent</th>
                                    <td>{{ reservation.idevent }}</td>
                                </tr>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ reservation.id }}</td>
                                </tr>
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

{% endblock %}