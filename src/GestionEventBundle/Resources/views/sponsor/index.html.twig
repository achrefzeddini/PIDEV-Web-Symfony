{% extends 'admin.html.twig' %}
{% block content %}
        <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Sponsors</h1>
                <p class="mb-4"><a href="{{ path('sponsor_new') }}">Create a new sponsor</a></p>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Confirmation</th>
                                    <th>Mailsponsor</th>
                                    <th>Idsponsor</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for sponsor in sponsors %}
                                    <tr>
                                        <td><a href="{{ path('sponsor_show', { 'idsponsor': sponsor.id }) }}">{{ sponsor.nom }}</a></td>
                                        <td>{% if sponsor.confirmation %}Yes{% else %}No{% endif %}</td>
                                        <td>{{ sponsor.mailsponsor }}</td>
                                        <td>{{ sponsor.id }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('sponsor_show', { 'idsponsor': sponsor.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('sponsor_edit', { 'idsponsor': sponsor.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
{% endblock %}