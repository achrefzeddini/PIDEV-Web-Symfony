{% extends 'admin.html.twig' %}
{% block content %}
<h2> List of Seasons </h2>

    <div class="card shadow mb-4">
        <div class="col-sm-3 mb-3 mb-sm-0" >
            <br>
            <a  class="btn btn-success btn-user btn-block btn-lg" href="{{ path("hunt_kingdom_ajoutSeason")}}" > Add Season </a>  </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th> Season </th>
                        <th> Start Time </th>
                        <th> Finish Time </th>
                        <th> Informartion </th>



                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th> Season </th>
                        <th> Start Time </th>
                        <th> Finish Time </th>
                        <th> Informartion </th>


                    </tr>
                    </tfoot>
                    <tbody>
                    {% for s in season %}
                        <tr>
                            <td> {{ s.nom }} </td>
                            <td> {{ s.start | date('F d, Y') }} </td>
                            <td> {{ s.finish |date('F d, Y') }} </td>
                            <td> {{ s.description }}
                                <div align="right">
                             <a href="{{ path("hunt_kingdom_updateSeason",{'id':s.id })}}" class="btn btn-info btn-circle btn-sm">
                                    <i class="fas fa-info-circle"></i> </a>
                             <a href="{{ path("hunt_kingdom_deleteSeason",{'id':s.id })}}" class="btn btn-danger btn-circle btn-sm">
                                    <i class="fas fa-trash"></i> </a>   </div> </td>

                        </tr>
                    {% endfor %}



                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="js/demo/datatables-demo.js"></script>

    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Core plugin JavaScript-->
    <script src="{{ asset('vendor/jquery-easing/jquery.easing.min.js') }}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ asset('js/sb-admin-2.min.js') }}"></script>

    <!-- Page level plugins -->
    <script src="{{ asset('vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

    <!-- Page level custom scripts -->
    <script src="{{ asset('js/demo/datatables-demo.js') }}"></script>


{% endblock %}